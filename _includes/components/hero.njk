<code class="language-javascript">import { useFireproof } from '@fireproof/react'

export default function TodoList () {
  const { database, useLiveQuery } = useFireproof('my-app')
  const todos = useLiveQuery((doc) => doc.date).rows.map((row) => row.doc)
  function createTodo(text) {
    database.put({type: 'todo', text, completed: false, date: Date.now()})
  } 
  return &lt;&gt;&lt;input type=&quot;text&quot; 
    onChange={(e) =&gt; createTodo(e.target.value)} /&gt;
    &lt;ul&gt;{todos.map((todo) =&gt; 
      &lt;li key={todo._id} 
        onClick={()=&gt; 
          database.put({...todo, completed: !todo.completed})}&gt;
        {todo.text}
      &lt;/li&gt;)}&lt;/ul&gt;&lt;/&gt;
}
