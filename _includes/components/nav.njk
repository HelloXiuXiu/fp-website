<!-- Menu -->
<a href="/">
  <img src="{{ '/static/img/logo-animated.svg' | url }}" alt="Fireproof Logo" style="height: 64px; width: auto; padding-right:0.5em"/>
</a>
<nav class="nav-menu">
  {% set navPages = collections.all | eleventyNavigation %}
  <ul class="flex">
    {%- for entry in navPages %}
      <li class="mr-6">
        <a href="{{ entry.url | url }}"{% if entry.url == page.url %} data-current="current item"{% endif %}>{{ entry.title }}</a>
      </li>
    {%- endfor %}
    <li class="mr-6">
        <a href="/try-free/">Try Now</a>
      </li>
    <li class="mr-8">
      <a href="/join/" class="px-4 py-2 fireproof text-white whitespace-nowrap font-medium rounded-lg outline focus:outline-none">
            Join</a>
    </li> 
  </ul>
</nav>